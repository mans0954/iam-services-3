<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan
            base-package="org.openiam.xacml.srvc.searchbeans.converter,
                          org.openiam.xacml.srvc.dozer,
                          org.openiam.xacml.srvc.dao,
    					  org.openiam.xacml.srvc.rest.service,
    					  org.openiam.xacml.srvc.rest,
    					  org.openiam.xacml.srvc.service"/>

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:securityconf.properties</value>
                <value>file:${confpath}/conf/datasource.properties</value>
                <value>file:${confpath}/conf/securityconf.properties</value>
            </list>
        </property>
        <property name="ignoreResourceNotFound" value="true"/>
    </bean>

    <bean id="defaultPatternResource" class="org.springframework.core.io.ClassPathResource">
        <constructor-arg index="0" value="${org.openiam.uri.patterns.defaut.object.file}"/>
    </bean>


</beans>


