<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jee="http://www.springframework.org/schema/jee"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
       http://www.springframework.org/schema/jee http://www.springframework.org/schema/jee/spring-jee-3.0.xsd">

    <context:component-scan base-package="org.openiam.idm.srvc" />

    <!-- JMS -->

    <jee:jndi-lookup id="connectionFactory" jndi-name="java:/JmsXA" expected-type="javax.jms.ConnectionFactory" />

    <bean id="jmsTemplate" class="org.springframework.jms.core.JmsTemplate">
        <property name="connectionFactory" ref="connectionFactory" />
    </bean>
    
    <bean id="jtaTransactionManager" class="org.springframework.transaction.jta.JtaTransactionManager"/>

	<bean id="jmsReceiverThreadPoolTaskExecutor" class="org.springframework.scheduling.concurrent.ThreadPoolTaskExecutor">
        <property name="daemon" value="true" />
        <!--<property name="corePoolSize" value="3" />-->
        <!--<property name="maxPoolSize" value="5" />-->
    </bean>

	<jee:jndi-lookup id="mailQueue" jndi-name="queue/mail" expected-type="javax.jms.Queue" />
    <bean id="jmsContainer" class="org.springframework.jms.listener.DefaultMessageListenerContainer">
        <property name="connectionFactory" ref="connectionFactory" />
        <property name="destination" ref="mailQueue" />
        <property name="messageListener" ref="mailDispatcher" />
        <!--<property name="concurrency" value="3" />-->
        <!--<property name="maxConcurrentConsumers" value="5" />-->
        <property name="taskExecutor" ref="jmsReceiverThreadPoolTaskExecutor" />
        <property name="transactionManager" ref="jtaTransactionManager" />
        <property name="errorHandler" ref="mailErrorHandler"/>
    </bean>


	<jee:jndi-lookup id="logQueue" jndi-name="queue/log" expected-type="javax.jms.Queue" />

    <jee:jndi-lookup id="provQueue" jndi-name="queue/prov" expected-type="javax.jms.Queue" />

    <jee:jndi-lookup id="subsQueue" jndi-name="queue/subs" expected-type="javax.jms.Queue" />

</beans>