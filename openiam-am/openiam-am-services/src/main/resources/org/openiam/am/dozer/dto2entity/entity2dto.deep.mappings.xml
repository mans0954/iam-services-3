<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://dozer.sourceforge.net
          http://dozer.sourceforge.net/schema/beanmapping.xsd">


    <mapping>
        <class-a>org.openiam.am.srvc.domain.AuthProviderEntity</class-a>
        <class-b>org.openiam.am.srvc.dto.AuthProvider</class-b>
        <field custom-converter="org.openiam.dozer.crossentity.CrossEntityPersistentSetConverter" custom-converter-param="amDto2entityShallowDozerMapper">
            <a>providerAttributeSet</a>
            <b>providerAttributeSet</b>
        </field>
        <field custom-converter="org.openiam.dozer.crossentity.CrossEntityPersistentObjectConverter" custom-converter-param="amDto2entityShallowDozerMapper">
            <a>resource</a>
            <b>resource</b>
        </field>
        <field custom-converter="org.openiam.dozer.crossentity.CrossEntityMapConverterWithKeyString" custom-converter-param="amDto2entityShallowDozerMapper">
            <a>resourceAttributeMap</a>
            <b>resourceAttributeMap</b>
        </field>
    </mapping>


    <mapping>
        <class-a>org.openiam.idm.srvc.res.domain.ResourceEntity</class-a>
        <class-b>org.openiam.idm.srvc.res.dto.Resource</class-b>
        <field custom-converter="org.openiam.dozer.crossentity.CrossEntityPersistentSetConverter" custom-converter-param="amDto2entityShallowDozerMapper">
            <a>parentResources</a>
            <b>parentResources</b>
        </field>
        <field custom-converter="org.openiam.dozer.crossentity.CrossEntityPersistentSetConverter" custom-converter-param="amDto2entityShallowDozerMapper">
            <a>childResources</a>
            <b>childResources</b>
        </field>
        <field custom-converter="org.openiam.dozer.crossentity.CrossEntityPersistentSetConverter" custom-converter-param="amDto2entityShallowDozerMapper">
            <a>resourceRoles</a>
            <b>resourceRoles</b>
        </field>
        <field custom-converter="org.openiam.dozer.crossentity.CrossEntityPersistentSetConverter" custom-converter-param="amDto2entityShallowDozerMapper">
            <a>resourceProps</a>
            <b>resourceProps</b>
        </field>
        <field custom-converter="org.openiam.dozer.crossentity.CrossEntityPersistentSetConverter" custom-converter-param="amDto2entityShallowDozerMapper">
            <a>resourceGroups</a>
            <b>resourceGroups</b>
        </field>
        <field-exclude>
            <a>resourceUsers</a>
            <b>resourceUsers</b>
        </field-exclude>
    </mapping>

</mappings>